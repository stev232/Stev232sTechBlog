<section class="container">
  <h3 class="blog-title">{{blog.title}}</h3>
  {{#if loggedIn}}
  <section class="flex-row justify-center">
    <div class="card-body">
      <p>By: {{blog.user.user_name}}</p>
      <p>{{blog.content}}</p>
    </div>
  </section>
</section>
{{else}}
<a href="/login">You must login first to view this page</a>
{{/if}}